# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-minimum-50-characters-make-it-very-secure-and-unique
ALLOWED_HOSTS=your-app-name.onrender.com,etusl.onrender.com,127.0.0.1,localhost

# Database Configuration
# Render automatically provides DATABASE_URL when you add PostgreSQL/MySQL
# For PostgreSQL (Recommended for Render):
DATABASE_URL=postgresql://user:password@host:5432/dbname
# For MySQL:
# DATABASE_URL=mysql://user:password@host:3306/dbname

# Security Settings (enable in production on Render)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
DJANGO_LOG_LEVEL=INFO

# Optional: Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Optional: Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles/
